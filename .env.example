# Guardian interval in seconds between Nginx checks
GUARDIAN_CHECK_INTERVAL=30

# Webhook or Alertmanager URL for sending alerts
GUARDIAN_ALERT_WEBHOOK=http://alertmanager:9093

# Nginx service name (useful if running in Docker)
NGINX_SERVICE=nginx

# Logging level: DEBUG, INFO, WARN, ERROR
GUARDIAN_LOG_LEVEL=INFO

# Metrics port for Prometheus exporter
GUARDIAN_METRICS_PORT=9101
